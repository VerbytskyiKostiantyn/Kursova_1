@model Kursova_1.Models.Data.Employee
<div class="text-center m-3 mb-2">
    <h1 class="display-6">Внести співробітника в базу даних</h1>
</div>

<div class="container row">
    <form asp-action="Create" method="post">
        <div class="form-group col-12">
            <label asp-for="FirstName" style="font-size: 150%;">Ім'я*</label>
            <input type="text" class="form-control" asp-for="FirstName" placeholder="Введіть ім'я" style="font-size: 130%;">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="LastName" style="font-size: 150%;">Прізвище*</label>
            <input type="text" class="form-control" asp-for="LastName" placeholder="Введіть прізвище" style="font-size: 130%;">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Position" style="font-size: 150%;">Посада*</label>
            <input type="text" class="form-control" asp-for="Position" placeholder="Введіть посаду" style="font-size: 130%;">
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="DateOfBirth" style="font-size: 150%;">Дата народження</label>
            <input type="date" class="form-control" asp-for="DateOfBirth" style="font-size: 130%;">
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="DateOfEmployment" style="font-size: 150%;">Дата прийняття на роботу*</label>
            <input type="date" class="form-control" asp-for="DateOfEmployment" style="font-size: 130%;">
            <span asp-validation-for="DateOfEmployment" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Adress" style="font-size: 150%;">Адреса</label>
            <input type="text" class="form-control" asp-for="Adress" placeholder="Введіть адресу" style="font-size: 130%;">
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Salary" style="font-size: 150%;">Зарплата*</label>
            <input type="text" class="form-control" asp-for="Salary" placeholder="Введіть зарплату" style="font-size: 130%;">
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="mt-2">* - Це поле є обов'язковим для заповнення</label>
        </div>
        <button type="submit" class="btn btn-secondary mt-3 mb-3 col-12 p-0 pb-1" style="font-size: 150%;">Зберегти</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}