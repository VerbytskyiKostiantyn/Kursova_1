@model Employee
<div class="m-3 mb-2 d-flex justify-content-between align-items-center">
	<a asp-controller="Home" asp-action="Index" class="nav-link" style="font-size: 2rem;"><i class="bi bi-arrow-left-circle-fill"></i></a>
	<h1 class="text-center display-6 mx-auto">Перегляд та оновлення повної інформації про співробітника</h1>
</div>
<div class="container row">
	<form method="post">
		<div class="form-group col-12">
			<label asp-for="Id" style="font-size: 150%;">Id</label>
			<input type="text" class="form-control" asp-for="Id" style="font-size: 130%;" disabled>
		</div>
		<div class="form-group col-12">
			<label asp-for="FirstName" style="font-size: 150%;">Ім'я*</label>
			<input type="text" class="form-control" asp-for="FirstName" placeholder="Введіть ім'я" style="font-size: 130%;">
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="LastName" style="font-size: 150%;">Прізвище*</label>
			<input type="text" class="form-control" asp-for="LastName" placeholder="Введіть прізвище" style="font-size: 130%;">
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="Position" style="font-size: 150%;">Посада*</label>
			<input type="text" class="form-control" asp-for="Position" placeholder="Введіть посаду" style="font-size: 130%;">
			<span asp-validation-for="Position" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="DateOfBirth" style="font-size: 150%;">Дата народження</label>
			<input type="date" class="form-control" asp-for="DateOfBirth" style="font-size: 130%;">
			<span asp-validation-for="DateOfBirth" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="DateOfEmployment" style="font-size: 150%;">Дата прийняття на посаду*</label>
			<input type="date" class="form-control" asp-for="DateOfEmployment" style="font-size: 130%;">
			<span asp-validation-for="DateOfEmployment" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="DateOfDismissal" style="font-size: 150%;">Дата звільнення з посади</label>
			<input type="date" class="form-control" asp-for="DateOfDismissal" style="font-size: 130%;">
			<span asp-validation-for="DateOfDismissal" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="Adress" style="font-size: 150%;">Адреса</label>
			<input type="text" class="form-control" asp-for="Adress" placeholder="Введіть адресу" style="font-size: 130%;">
			<span asp-validation-for="Adress" class="text-danger"></span>
		</div>
		<div class="form-group col-12">
			<label asp-for="Salary" style="font-size: 150%;">Зарплата*</label>
			<input type="text" class="form-control" asp-for="Salary" placeholder="Введіть зарплату" style="font-size: 130%;">
			<span asp-validation-for="Salary" class="text-danger"></span>
		</div>
		<div class="col-12">
			<label class="mt-2">* - Це поле є обов'язковим для заповнення</label>
		</div>
		<div class="row m-1">
			<button type="submit" class="btn btn-secondary mt-3 mb-3 col-8 p-0 pb-1" style="font-size: 150%;">Оновити</button>
			<div class="col-1"></div>
			<button asp-action="Delete" asp-route-id="@Model.Id" method="post" class="btn btn-warning mt-3 mb-3 col-3 p-0 pb-1" style="font-size: 150%;">Видалити</button>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}